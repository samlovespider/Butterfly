<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/view_action_bar"/>

    <TextView
        android:id="@+id/tvPickUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_pick_up_name"
        android:padding="5dp"
        android:text="Pick Display Name"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPickUpName"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:id="@+id/relSnap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnSnap"
            android:background="@color/yellow"/>

        <TextView
            android:id="@+id/btnSnap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/activity_accounts_snap"
            android:textAllCaps="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnSnap"
            android:background="@color/yellow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relSnap"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnInstagram"
            android:background="@color/tomato"/>

        <TextView
            android:id="@+id/btnInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/activity_accounts_instagram"
            android:textAllCaps="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnInstagram"
            android:background="@color/tomato"/>
    </RelativeLayout>
</RelativeLayout>
