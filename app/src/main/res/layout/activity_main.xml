<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proproject.butterfly.ui.activities.MainActivity">


    <com.proproject.butterfly.ui.views.CustomFrontTextView
        android:id="@+id/cftvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/activity_main_title"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cftvTitle"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnQRcode"
            style="@style/activity_main_button"
            android:layout_marginTop="10dp"
            android:text="@string/activity_main_qrcode" />

        <Button
            android:id="@+id/btnScaner"
            style="@style/activity_main_button"
            android:text="@string/activity_main_scaner" />

        <Button
            android:id="@+id/btnAccounts"
            style="@style/activity_main_button"
            android:layout_marginBottom="10dp"
            android:text="@string/activity_main_accounts" />

    </LinearLayout>


</RelativeLayout>
